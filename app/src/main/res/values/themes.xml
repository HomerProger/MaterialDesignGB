<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MaterialDesignGB" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomOutLinedBox" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_wikipedia</item>
        <item name="boxStrokeColor">@color/myColor5</item>
        <item name="boxStrokeWidth">5dp</item>
        <item name="android:textColorHint">@color/myColor3</item>



    </style>
    <!-- Кастомная тема 1 -->

    <style name="GreenTheme" parent="Theme.MaterialDesignGB">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/myColor1</item>
        <item name="colorPrimaryVariant">@color/myColor2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/myColor4</item>
    </style>

    <!-- Кастомная тема 2 -->

    <style name="RedTheme" parent="Theme.MaterialDesignGB">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/myColor4</item>
        <item name="colorPrimaryVariant">@color/myColor5</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/myColor6</item>
    </style>

</resources>